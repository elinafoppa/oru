    private void LoginButtonActionPerformed(java.awt.event.ActionEvent evt) {                                            
        
        try {
            // TODO add your handling code here:
            String Admin = AdminTxtF.getText();
            String Password = PasswordTxtF.getText();
            //losenord.validateLosen(Admin, Login);
            String namnfraga = "SELECT NAMN from AGENT where NAMN like '"+ Admin +"'";
            String losenordsfraga = "SELECT LOSENORD from AGENT where NAMN like '"+ Admin +"'";
            String hamtadeNamnet = idb.fetchSingle(namnfraga);
            String hamtadeLosenord = idb.fetchSingle(losenordsfraga);
            
//               if (Admin.isBlank() )
//               { //denna kollar om rutan är tom
//                JOptionPane.showMessageDialog(null, "alla fält måste vara ifyllda");
//                 
//               }
//               
//               if (Admin.isBlank() ) { //denna kollar om rutan är tom
//                   JOptionPane.showMessageDialog (null, "alla fält måste vara ifyllda");
//                   
//               }    
//               
               if(Admin.equals(hamtadeNamnet))
               {
               if (hamtadeLosenord.equals(Password))
               {
                   System.out.println("Inloggad!");
                   new StartsidaLogin().setVisible(true);
                     
               }
               else //check vid felaktigt lösenord av admin
               {
                   System.out.println(Password + " " + hamtadeLosenord);
                   System.out.println("felaktigt lösenord!");
               }
                }
                else
                {
                   System.out.println("Angiven admin finns inte!");
                   JOptionPane.showMessageDialog(null, "Något gick fel!");
                }    
            
            }
            catch (Exception e) {
                JOptionPane.showMessageDialog(null, "Något gick fel!");
                System.out.println("Internt felmeddelande" + e.getMessage());
            }    
         
        }                                          
    
